{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "A JSON Schema for JavaScript API specification",
  "description": "API specification",
  "type": "object",
  "required": [
    "spec",
    "info",
    "entries"
  ],
  "additionalProperties": false,
  "properties": {
    "spec": {
      "type": "object",
      "description": "Info about the specification version the document uses",
      "properties": {
        "version": { "type": "string", "enum": ["0.x"]}
      },
      "required": ["version"],
      "additionalProperties": false
    },
    "info": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "A description of the API"
        },
        "name": {
          "type": "string",
          "description": "Name of the API"
        },
        "version": { "$ref": "#/definitions/version" },
        "license": {
          "type": "string",
          "description": "SPDX license identifier"
        }
      },
      "required": ["name", "version"],
      "additionalProperties": false
    },
    "entries": {
      "$ref": "#/definitions/entry"
    },
    "definitions": {
      "$ref": "#/definitions/entry"
    }
  },
  "definitions": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+.[0-9]+.[0-9]+$"
    },
    "vendor": {
      "additionalProperties": true,
      "additionalItems": true
    },
    "availability": {
      "type": "object",
      "properties": {
        "since": { "$ref": "#/definitions/version" },
        "deprecated": {
          "oneOf": [
            { "type": "boolean" },
            {
              "type": "object",
              "properties": {
                "since": { "$ref": "#/definitions/version" },
                "description": {
                  "type": "string"
                }
              },
              "required": ["since"],
              "additionalProperties": false
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "stability": {
      "description": "Stability of the entity",
      "type": "string",
      "enum": ["experimental", "stable", "locked"]
    },
    "entity": {
      "type": "object",
      "oneOf": []
    },
    "entry": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/entity"
      }
    }
  }
}
